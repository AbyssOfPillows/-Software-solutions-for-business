@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="parent">
    <form>
        <button id="left" class="child" asp-page="IndividualVisit" width="120px" height="200px">
            <img src="/Image/нАДо2.png" width="100" height="100" alt="" /><br />Личное посещение
        </button>
        <button id="right" class="child" asp-page="GroupVisit" width="120px" height="200px">
            <img src="/Image/нАДо1.png" width="100" height="100" /><br />Групповое посещение
        </button>
    </form>
</div>

<style>
    .parent {
    }

    .child {
        width: 300px;
        height: 300px;
        margin: auto;
    }

    #left {
        position: absolute;
        top: 0;
        right: 350px;
        bottom: 0;
        left: 0;
    }

    #right {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 350px;
    }
</style>
