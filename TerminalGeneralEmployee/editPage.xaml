<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerminalGeneralEmployee.editPage"
             Title="editPage">
    <VerticalStackLayout>
        <Label 
            Text="Дата посещения"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />
        <Entry 
            x:Name="Data"/>

        <Label 
            Text="Время посещения"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />
        <Entry 
            x:Name="Time"/>

        <Label 
            Text="Статус"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />
        <Picker x:Name="Status" Title = "Статус">
            <Picker.Items>
                <x:String>1</x:String>
                <x:String>0</x:String>
            </Picker.Items>
        </Picker>
        <Button
            Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>